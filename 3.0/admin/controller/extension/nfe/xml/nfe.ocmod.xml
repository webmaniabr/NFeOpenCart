     <operation info="Get Nfe Info">
       <search position="before" ><![CDATA[
       $this->response->setOutput($this->load->view('sale/order_info', $data));
       ]]></search>
       <add><![CDATA[
       $order_table = (DB_PREFIX) ? "order" : "`order`";
       $query = $this->db->query("SELECT nfe_info FROM " . DB_PREFIX . "$order_table WHERE order_id = $order_id");
       $url = $this->url->link('extension/module/webmaniabrnfe/updateNFe', 'user_token=' . $this->session->data['user_token'], true);

       if(isset($query->rows[0]['nfe_info'])){
        $nfe_info = @unserialize($query->rows[0]['nfe_info']);
        if (!$nfe_info) {
            $nfe_info = @unserialize(utf8_decode(base64_decode($query->rows[0]['nfe_info'])));
        }
        if (!$nfe_info) {
            $nfe_info = array();
        }

        $custom_fields_customer = !empty($order_info['custom_field']) && is_array($order_info['custom_field']) ? $order_info['custom_field'] : null;
        if (!$custom_fields_customer) {
          $customer_info = $this->model_customer_customer->getCustomer($order_info['customer_id']);
          $custom_fields_customer = @unserialize($customer_info['custom_field']);
          if(!$custom_fields_customer) $custom_fields_customer = json_decode($customer_info['custom_field'], true);
        }
		
        $custom_fields_ids = $this->load->controller('extension/module/webmaniabrnfe/getCustomFieldsIds');

        $route_get_value_from_fields = 'extension/module/webmaniabrnfe/get_value_from_fields';
        $data_get_value_from_fields = ['key' => 'tipo_pessoa', 'custom_fields_ids' => $custom_fields_ids, 'custom_fields_customer' => $custom_fields_customer,];

        $documento = $this->load->controller($route_get_value_from_fields, $data_get_value_from_fields);
		    $password = '';
        if($documento == $this->load->controller($route_get_value_from_fields, array_merge($data_get_value_from_fields, ['key' => 'pessoa_fisica']))){
			    $password = $this->load->controller($route_get_value_from_fields, array_merge($data_get_value_from_fields, ['key' => 'cpf']));
        }elseif($documento == $this->load->controller($route_get_value_from_fields, array_merge($data_get_value_from_fields, ['key' => 'pessoa_juridica']))){
			    $password = $this->load->controller($route_get_value_from_fields, array_merge($data_get_value_from_fields, ['key' => 'cnpj']));
        }

        foreach ($nef_info as $key => $nfe) {

          $tokens = [
            "danfe" => $this->load->controller('extension/module/webmaniabrnfe/createSecureTokenDFe', ["password" => $password, "uuid" => $nfe['uuid']]),
            "danfe_simples" => $this->load->controller('extension/module/webmaniabrnfe/createSecureTokenDFe', ["password" => $password, "uuid" => $nfe['uuid']]),
            "danfe_etiqueta" => $this->load->controller('extension/module/webmaniabrnfe/createSecureTokenDFe', ["password" => $password, "uuid" => $nfe['uuid']]),
            "xml" => $this->load->controller('extension/module/webmaniabrnfe/createSecureTokenDFe', ["password" => $password, "uuid" => $nfe['uuid']]),
          ] ;

          if (!$nfe['url_danfe_simples']) {
            $nfe_info[$key]['url_danfe_simples'] = str_replace('/danfe/', '/danfe/simples/', $nfe['url_danfe']); 
          }

          if (!$nfe['url_danfe_etiqueta']) {
            $nfe_info[$key]['url_danfe_etiqueta'] = str_replace('/danfe/', '/danfe/etiqueta/', $nfe['url_danfe']); 
          }

          $nfe_info[$key]['url_danfe'] = $nfe_info[$key]['url_danfe'] . '?token=' . $tokens['danfe'];
          $nfe_info[$key]['url_danfe_simples'] = $nfe_info[$key]['url_danfe_simples'] . '?token=' . $tokens['danfe_simples'];
          $nfe_info[$key]['url_danfe_etiqueta'] = $nfe_info[$key]['url_danfe_etiqueta'] . '?token=' . $tokens['danfe_etiqueta'];
          $nfe_info[$key]['url_xml'] = $nfe_info[$key]['url_xml'] . '?token=' . $tokens['xml'];

        }

        $data['nfe_info'] = $nfe_info;
        $data['url'] = $url;
       }else{
        $data['nfe_info'] = array();
        $data['url'] = '';
       }


       ]]></add>

     </operation>
